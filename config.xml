<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="8.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kingdom Lifestyle Radio</name>
    <description>KLS Radio Streaming App</description>
    <author email="ogunfoworakehinde55@gmail.com" href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>
    <content src="index.html" />
    
    <!-- App Icon -->
    <icon src="www/images/icon.png" />
    
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <!-- Optional: Android-specific icons if you have multiple sizes -->
        <!-- <icon density="ldpi" src="www/images/icon-36-ldpi.png" /> -->
        <!-- <icon density="mdpi" src="www/images/icon-48-mdpi.png" /> -->
        <!-- <icon density="hdpi" src="www/images/icon-72-hdpi.png" /> -->
        <!-- <icon density="xhdpi" src="www/images/icon-96-xhdpi.png" /> -->
        <!-- <icon density="xxhdpi" src="www/images/icon-144-xxhdpi.png" /> -->
        <!-- <icon density="xxxhdpi" src="www/images/icon-192-xxxhdpi.png" /> -->
        
        <!-- Splash Screen -->
        <splash src="www/images/splash.png" density="land-ldpi"/>
        <splash src="www/images/splash.png" density="land-mdpi"/>
        <splash src="www/images/splash.png" density="land-hdpi"/>
        <splash src="www/images/splash.png" density="land-xhdpi"/>
        <splash src="www/images/splash.png" density="land-xxhdpi"/>
        <splash src="www/images/splash.png" density="land-xxxhdpi"/>
        <splash src="www/images/splash.png" density="port-ldpi"/>
        <splash src="www/images/splash.png" density="port-mdpi"/>
        <splash src="www/images/splash.png" density="port-hdpi"/>
        <splash src="www/images/splash.png" density="port-xhdpi"/>
        <splash src="www/images/splash.png" density="port-xxhdpi"/>
        <splash src="www/images/splash.png" density="port-xxxhdpi"/>
        
        <allow-intent href="market:*" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        
        <!-- Splash screen preferences -->
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
</widget>