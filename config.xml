<?xml version="1.0" encoding="utf-8"?>
<widget
    id="com.kingdomlifestyleradio.klsradio"
    version="12.0.5"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>KLS Radio</name>
    <description>KLS Radio Streaming App</description>

    <author
        email="dev@deloganwebsolution.com"
        href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>

    <content src="index.html" />

    <!-- Global icon fallback -->
    <icon src="www/images/icon.png" />

    <!-- Navigation / Access -->
    <allow-navigation href="*" />
    <access origin="*" />

    <!-- ANDROID CONFIG -->
    <platform name="android">

        <allow-intent href="market:*" />

        <!-- Versioning -->
        <preference name="versionCode" value="1205" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />

        <!-- Permissions -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </edit-config>

        <!-- Android icon -->
        <icon src="www/images/icon.png" density="mdpi" />

    </platform>

</widget>

