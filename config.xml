<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="8.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kingdom Lifestyle Radio</name>
    <description>KLS Radio Streaming App</description>
    <author email="ogunfoworakehinde55@gmail.com" href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>
    <content src="index.html" />
    
    <!-- App Icon -->
    <icon src="www/images/icon.png" />
    
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
  <platform name="android">
    <!-- REMOVE ALL SPLASH CONFIG TEMPORARILY -->
    <!-- <splash src="www/images/screen.png" /> -->
    <!-- <preference name="SplashScreen" value="screen" /> -->
    <!-- <preference name="SplashScreenDelay" value="5000" /> -->
    
    <!-- Keep only these -->
    <allow-intent href="market:*" />
    <preference name="AndroidInsecureFileModeEnabled" value="true" />
    
    <!-- ADD THIS to prevent splash from showing at all -->
    <preference name="SplashScreen" value="none" />
</platform>
</widget>
