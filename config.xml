<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="12.0.6"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>KLS Radio</name>
    <description>KLS Radio Streaming App</description>
    <author email="dev@deloganwebsolution.com" href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>

    <!-- Entry point -->
    <content src="index.html" />

    <!-- Access -->
    <access origin="*" />
    <allow-navigation href="*" />

    <!-- Splash & Status Bar -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="BackgroundColor" value="#0a0f2d" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarBackgroundColor" value="#0a0f2d" />

    <!-- Background Audio & Notifications -->
    <preference name="KeepRunning" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="mediaVolume" value="playback" />
    <preference name="AllowInlineMediaPlayback" value="true" />

    <!-- Android platform specific -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />
        <preference name="versionCode" value="1206" />

        <!-- App icon -->
        <icon density="mdpi" src="www/images/icon.png" />

        <!-- Permissions -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.BLUETOOTH" />
            <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
            <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
            <!-- For Android 13+ -->
            <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
        </edit-config>

        <!-- Application attributes for background streaming -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application
                android:allowBackup="false"
                android:stopWithTask="false"
                android:foregroundServiceType="mediaPlayback|connectedDevice"
                android:theme="@style/Theme.AppCompat.NoActionBar"
                android:usesCleartextTraffic="true" />
        </edit-config>

        <!-- Music Controls Notification Channel -->
        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <meta-data android:name="android.max_aspect" android:value="2.1" />
            
            <!-- Notification channel for Android 8.0+ -->
            <meta-data android:name="com.google.firebase.messaging.default_notification_channel_id" 
                      android:value="@string/default_notification_channel_id" />
        </config-file>

        <!-- Background Mode Service -->
        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <service
                android:name="de.appplant.cordova.plugin.background.ForegroundService"
                android:foregroundServiceType="mediaPlayback"
                android:exported="false" />
        </config-file>
    </platform>

    <!-- iOS specific (if needed) -->
    <platform name="ios">
        <config-file parent="UIBackgroundModes" target="*-Info.plist">
            <array>
                <string>audio</string>
                <string>fetch</string>
            </array>
        </config-file>
    </platform>

    <!-- Plugins -->
    <plugin name="cordova-plugin-background-mode" spec="^0.7.3" />
    <plugin name="cordova-plugin-music-controls2" spec="^3.0.4" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.2" />
    <plugin name="cordova-plugin-media" spec="^5.0.3" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    
    <!-- Core plugins -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
    <plugin name="cordova-plugin-statusbar" spec="^3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^5.0.0" />

</widget>
