<?xml version="1.0" encoding="utf-8"?>
<widget
    id="com.kingdomlifestyleradio.klsradio"
    version="12.0.0"
    android-versionCode="1200"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <!-- App Info -->
    <name>KLS Radio</name>
    <description>KLS Radio Streaming App</description>

    <author
        email="dev@deloganwebsolution.com"
        href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>

    <!-- Entry Point -->
    <content src="index.html" />

    <!-- App Icon -->
    <icon src="www/images/icon.png" />

    <!-- Navigation / Access -->
    <allow-navigation href="*" />
    <access origin="*" />

    <!-- Android Platform Config -->
    <platform name="android">

        <!-- ðŸ”‘ Version Code must increase for each new release -->
        <preference name="versionCode" value="1200" />

        <!-- Allow intents for Play Store -->
        <allow-intent href="market:*" />

        <!-- Required for Android 13+ file access changes -->
        <preference name="AndroidInsecureFileModeEnabled" value="true" />

        <!-- Advertising ID permission (if using ads / analytics) -->
        <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    </platform>

</widget>
