<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KLS Radio</name>
    <description>KLS Radio Streaming App</description>
    <author email="ogunfoworakehinde55@gmail.com" href="https://officialdelogan.great-site.net">
        Kingdom Lifestyle Radio
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="screen" />
</widget>
