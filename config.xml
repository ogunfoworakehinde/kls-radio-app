<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="8.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KLSR</name>
    <description>KLS Radio Streaming App</description>
    <author email="ogunfoworakehinde55@gmail.com" href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>
    <content src="index.html" />
    
    <!-- App Icon -->
    <icon src="www/images/icon.png" />
    
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <!-- NO SPLASH SCREEN AT ALL -->
        <preference name="SplashScreen" value="none" />
        <preference name="SplashScreenDelay" value="0" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="ShowSplashScreen" value="false" />
        
        <!-- Also remove any default splash images -->
        <preference name="SplashMaintainAspectRatio" value="false" />
        <preference name="FadeSplashScreen" value="false" />
        
        <allow-intent href="market:*" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="LoadUrlTimeoutValue" value="60000" />
    </platform>
</widget>