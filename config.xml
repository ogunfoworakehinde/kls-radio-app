<?xml version="1.0" encoding="utf-8"?>
<widget
    id="com.kingdomlifestyleradio.klsradio"
    version="12.0.1"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>KLS Radio</name>
    <description>KLS Radio Streaming App</description>

    <author
        email="dev@deloganwebsolution.com"
        href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>

    <content src="index.html" />

    <!-- App icon -->
    <icon src="www/images/icon.png" />

    <!-- Navigation / Access -->
    <allow-navigation href="*" />
    <access origin="*" />

    <!-- Permissions -->
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="versionCode" value="1201" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="android-targetSdkVersion" value="35" />

        <!-- Example of correctly using android:name -->
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    </platform>

</widget>
