<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kingdomlifestyleradio.klsradio" version="8.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kingdom Lifestyle Radio</name>
    <description>KLS Radio Streaming App</description>
    <author email="ogunfoworakehinde55@gmail.com" href="https://kingdomlifestyleradio.com">
        Kingdom Lifestyle Radio
    </author>
    <content src="index.html" />
    
    <!-- Android specific icons -->
    <platform name="android">
        <!-- Launcher icons -->
        <icon src="www/images/icon-36-ldpi.png" density="ldpi" />
        <icon src="www/images/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/images/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/images/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="www/images/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="www/images/icon-192-xxxhdpi.png" density="xxxhdpi" />
        
        <!-- Adaptive icons (Android 8.0+) -->
        <icon src="www/images/icon-foreground.png" foreground="true" />
        <icon src="www/images/icon-background.png" background="true" />
        
        <allow-intent href="market:*" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
    </platform>
    
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>